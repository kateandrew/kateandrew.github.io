:javascript
  $(function(){
    $('.cover_images a').hover(function(){
      var hover_href = $(this).attr('href');
      $('.top_nav a[href="'+hover_href+'"]').fadeTo(300, 1);
      $('.top_nav a:not([href="'+hover_href+'"])').fadeTo(500, 0);
    })
    $('.cover_images').mouseleave(function(){
      $('.top_nav a').fadeTo(300, 1);
    });
  })

